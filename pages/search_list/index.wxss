/* pages/search_list/index.wxss */

.container {
}

.search {
  padding: 20rpx;
  background: #eee;
}

.search-input {
  background: #fff;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #666;
  padding: 0 20rpx;
  border-radius: 10rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

.tab {
  font-size: 14px;
  color: #555;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ddd;
}

.tab-item {
}

.cative {
  color: red;
}

.goods-list {
  /* display: flex; */
}

.goods-listye {
}

.goods-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #bbb;
}

.goods-listye image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.goods-right {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-price {
  color: red;
  font-size: 14px;
}

.goods-price text {
  font-size: 18px;
}
.load-more{
  padding: 20rpx;
  text-align: center;
  font-size: 12px;
  color: #999;
}
