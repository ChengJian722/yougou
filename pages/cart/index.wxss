/* pages/cart/index.wxss */

.container {
}

.address {
  margin: 20rpx;
}
.ShouHuoRen {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #666;
}
.dianHua {
  padding-right: 60rpx;
  position: relative;
}
.dianHua::after {
  display: block;
  content: "";
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  width: 18rpx;
  height: 18rpx;
  border-top: 1px solid #666;
  border-right: 1px solid #666;
  transform: rotate(45deg);
}
.ShouHuoDiZhi {
  color: #666;
  font-size: 13px;
  padding: 30rpx 0 10rpx 0;
}
.xiao-img {
  display: block;
  width: 100%;
  height: 15rpx;
}
.shengHuoGuan {
  display: flex;
  padding: 0 20rpx;
  width: 100%;
  height: 80rpx;
  font-size: 14px;
  line-height: 80rpx;
  border-bottom: 2px solid #ddd;
}
.shengHuoGuan .house {
  padding-left: 20rpx;
}
/* 订单详情 */
.dingdan {
  display: flex;
  /* padding: 20rpx; */
  font-size: 14px;
}
.selected {
  width: 100rpx;
  display: flex;
  padding: 20rpx 0;
  justify-content: center;
  align-items: center;
}
.goods_item {
  flex: 1;
  display: flex;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0 ;
}
.goods_item image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.goods_item-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 20rpx;
}
.goods_item-right-title {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_item-right-Price {
  display: flex;
  justify-content: space-between;
}
.goods_item-right-Price .price {
  color: red;
}
.goods_item-right-Price .shuliang {
  display: flex;
}
.goods_item-right-Price .shuliang .shuliangjian {
   width:50rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  border:1px #999 solid;
  color:#999;
  border-radius: 2px;
}
.goods_item-right-Price .shuliang text {
  font-size: 13px;
  padding: 0 30rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.footer{
  position: fixed;
  width:100%;
  height: 100rpx;
  bottom:0;
  left:0;
  display: flex;
  align-items: center;
  font-size:14px;
  background:#fff;
  
}
.footer-left{
  height:100%;
  padding-left:20rpx;
  display: flex;
  align-items: center;
}
.footer-left icon{
  margin-right:20rpx;
}
.footer-center{
  flex:1;
  margin:5rpx 50rpx;
  line-height: 1
}
.footer-center .colorRed{
  color:red;
}
.footer-center .colorGray{
  font-size:12px;
  color: #999;
}
.checkout{
  width:220rpx;
  background: red;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
}

