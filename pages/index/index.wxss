/**index.wxss**/

.container {
  /* margin: 100rpx; */
}

.search {
  padding: 20rpx;
  background: #ff2d4a;
  /* position: fixed;
  top: 0;
  left: 0; */
  width: 100%;
  box-sizing: border-box;
  z-index: 99;
}

.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
}

.search-input icon {
  margin-right: 10px;
}

.slide-image {
  width: 750rpx;
  height: 340rpx;
}

.menus {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.menus image {
  width: 128rpx;
  height: 140rpx;
}

.floor {
  /* margin-top: 20rpx; */
}

.floor-title {
  height: 80rpx;
  background: #eee;
}

.floor-title image {
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  /* align-items: center; */
}

.floor-conter {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.floor-content-left image {
  width: 232rpx;
  height: 386rpx;
}

.floor-conter-right {
  flex: 1;
  margin-left: 10rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.floor-conter-right image {
  width: 233rpx;
  height: 188rpx;
  margin-right: 5rpx;
}
