/* pages/goods_detail/index.wxss */

/* 轮播图 */

.swiper {
  height: 750rpx;
}

.slide-image {
  width: 750rpx;
  height: 750rpx;
}

/* 详细部分 */

.jiage {
  padding: 20rpx;
  color: #ff2d4f;
  font-size: 22px;
}

.goods-info {
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 10rpx solid #ddd;
}

.goods-title {
  /* font-size: 12px; */
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-star {
  width: 150rpx;
  text-align: center;
  line-height: 1.2;
  border-left: 1px #ddd solid;
  margin-left: 20rpx;
  color: #999;
  padding-top: 5rpx;
}

/* //快递部分 */

.despatch {
  padding: 20rpx;
  font-size: 12px;
  color: #999;
}

.despatch-money {
  padding-left: 20rpx;
}

.promotion {
  padding: 20rpx;
  font-size: 14px;
  color: #000;
  border-bottom: 2px solid #ddd;
}
.promotion-money{
  padding-left: 20rpx;
  color: red;
}
.footer-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 750rpx;
  display: flex;
  box-sizing: border-box;
  background: #fff;
}
.kefu,
.gouwuche{
  display: flex;
  flex-direction: column;
  width:175rpx;
  height: 100rpx;
  font-size: 12px;
  color: #999;
  text-align: center;
}
.footer-bar .car-goumai{
  flex: 1;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 12px;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  background: orange;
}
.footer-bar .car-goumai .car,
.footer-bar .car-goumai .goumai{
  background: orange;
  width: 200rpx;
  text-align: center;
}
.footer-bar .car-goumai .goumai{
  background: red;
  margin-left: 0;
}
.contact{
  position:absolute;
  left:0; top:0;
  width:175rpx;
  height:100rpx;
  overflow: hidden;
  opacity: 0;
}


