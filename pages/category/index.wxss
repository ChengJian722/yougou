.category-left {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  text-align: center;
  box-sizing: border-box;
  background: #f6f6f6;
  border-bottom: 1px #eee solid;
}

.active {
  color: red;
  background: #fff;
  position: relative;
}

.active::before {
  display: block;
  content: "";
  width: 4px;
  height: 60rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 20rpx;
}

.categorys {
  flex: 1;
  padding: 20rpx;
}

.categorys-title {
  text-align: center;
  margin-bottom: 20px;
}

.categorys-title text {
  margin: 0 20rpx;
  color: #666;
}

.categorys-list {
  display: flex;
  flex-wrap: wrap;
  font-size: 12px;
}

.categorys-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.categorys-item image {
  width: 120rpx;
  height: 120rpx;
}
